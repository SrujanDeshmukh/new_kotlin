            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android"
            android:background="@drawable/border_1"
            android:textSize="12dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTML"
            android:background="@drawable/border_1"
            android:textSize="12dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHP"
            android:background="@drawable/border_1"
            android:textSize="12dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flutter"
            android:background="@drawable/border_1"
            android:textSize="12dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flutter"
            android:background="@drawable/border_1"
            android:textSize="12dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UX/UI"
            android:background="@drawable/border_1"
            android:textSize="12dp"
            android:padding="5dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
            <HorizontalScrollView
