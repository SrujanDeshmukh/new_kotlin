                                android:layout_width="match_parent"
                                android:layout_height="120dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/mentor_11" />

                                <ImageButton
                                    android:layout_width="48dp"
